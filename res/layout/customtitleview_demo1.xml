<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.yanguo.customviews"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.yanguo.customviews.view.CustomTitleView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:titleText="com.yanguo.customviews.view.CustomTitleView"
        custom:titleTextColor="@android:color/background_dark"
        custom:titleTextSize="56sp"
        android:padding="10dip"/>

    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="com.yanguo.customviews.view.CustomTitleView"
        android:padding="10dip"
        android:textSize="56sp"
        android:singleLine="true"
        android:background="@android:color/holo_green_light"/>
    
    <Button android:id="@+id/btn_changeTextSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

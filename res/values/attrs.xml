<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="titleText" format = "reference|string"></attr>
    <attr name="titleTextColor" format="reference|color"></attr>
    <attr name="titleTextSize" format="reference|dimension"></attr>
    <attr name ="imageScaleType">
        <enum name ="fill" value = "0"/>
        <enum name = "center" value="1"/>
    </attr>
    <attr name = "image" format = "reference"/>
    <declare-styleable name ="CustomTitleView">
        <attr name="titleText"/>
        <attr name="titleTextColor"/>
        <attr name="titleTextSize"/>
    </declare-styleable>
    
    <declare-styleable name = "CustomImageView">
        <attr name = "titleText"/>
        <attr name = "titleTextColor"/>
        <attr name = "titleTextSize"/>
        <attr name = "image"/>
        <attr name = "imageScaleType"/>
    </declare-styleable>
</resources>
